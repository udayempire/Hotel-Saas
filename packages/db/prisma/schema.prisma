generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FoodItem {
  id          Int      @id @default(autoincrement())
  itemName    String
  price       Int
  quantity    Int
  availability Boolean
  category    Category[] @relation("FoodItemCategores")  // Correct relationship
  
}

model Category {
  id          Int         @id @default(autoincrement())
  categoryName String
  foodItems   FoodItem[]  @relation("FoodItemCategores")  // Many-to-one relation with FoodItem - category can have multiple food item  
}

